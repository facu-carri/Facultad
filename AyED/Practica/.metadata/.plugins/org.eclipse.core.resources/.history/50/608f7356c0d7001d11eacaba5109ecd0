		}
		return 1;
	}
	
	private int preorder(ArbolBinario<T> arbol){
		int cant = 0;
		if(this.esHoja()){
			return 1;
		}
		if(arbol.tieneHijoIzquierdo()){
			cant += this.preorder(arbol.getHijoIzquierdo());
		}
		if(arbol.tieneHijoDerecho()){
			cant += this.preorder(arbol.getHijoDerecho());
		}
	}

